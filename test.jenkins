pipeline {
    agent any
	tools {
        git 'my-git'
    }
	environment {
        PYTHONPATH = sh(
            script: 'pip3 show pip | awk \'/^Location: /{print $2}\' | sed \'s/Location: //g\'',
            returnStdout: true
        ).trim()
    }
    stages {

	stage('Inst') {
            steps {
                 sh 'echo $PYTHONPATH'
            }
        }
	stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/anastaviki/test.git'
            }
        }

		stage('Install dependencies') {
            steps {
                sh 'pip3 install -r requirements.txt'
            }
        }
		

		 stage('Run Pytest') {
            steps {
                sh 'python3 -m pytest PyTest_HW/PyTest/test_cases.py --html=report.html '
            }
        }
		
		stage('Run Robot Framework Tests') {
            steps {
                sh 'robot -d reports/ RobotFramework_HW/RF_Tests/tests/'
            }
        }
    }
}
