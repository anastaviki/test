pipeline {
    agent any
	tools {
        git 'my-git'
    }
    stages {
	stage('Example') {
            steps {
                withEnv(["PATH+FOO=${tool 'my-git'}/bin"]) {
                    sh 'echo $PATH'
					
                }
            }
        }
	stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/anastaviki/test.git'
            }
        }

		stage('Install dependencies') {
            steps {
                sh 'pip3 install -r requirements.txt'
            }
        }
		
		        stage('Add pip library path') {
    steps {
        script {
            def packagePath = sh(returnStdout: true, script: 'pip show pytest | grep "Location" | cut -d " " -f 2').trim()
            withEnv(["PATH+PYTHON=${packagePath}/bin"]) {
                sh 'pytest tests/'
            }
        }
    }
}
		 stage('Run Pytest') {
            steps {
                sh 'pytest PyTestHW/PyTest/'
            }
        }
    }
}
