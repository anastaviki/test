pipeline {
    agent any
	tools {
        git 'my-git'
    }
    stages {
	 stage('Ex') {
            steps {
                withEnv(["PATH+FOO=${tool 'my-git'}/bin"]) {
                    sh 'echo $PATH'
                }
            }
	stage('Checkout') {
            steps {
                git branch: 'develop', url: 'https://github.com/YOUR-USERNAME/YOUR-REPOSITORY.git'
            }
        }
        stage('Hello') {
            steps {
                echo 'Hello World!'
            }
        }
		stage('Install dependencies') {
            steps {
                sh 'pip3 install -r requirements.txt'
            }
        }
    }
}
