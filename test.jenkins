pipeline {
    agent any
	tools {
        git 'my-git'
    }
    stages {
	stage('Example') {
            steps {
                withEnv(["PATH+FOO=${tool 'my-git'}/bin"]) {
                    sh 'echo $PATH'
					
                }
            }
        }
	stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/anastaviki/test.git'
            }
        }
        stage('Hello') {
            steps {
                sh 'pip show pytest'
            }
        }
		stage('Install dependencies') {
            steps {
                sh 'pip3 install -r requirements.txt'
            }
        }
		 stage('Run Pytest') {
            steps {
                sh 'pytest PyTestHW/PyTest/'
            }
        }
    }
}
