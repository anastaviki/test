pipeline {
    agent any
	tools {
        git 'my-git'
    }
	environment {
        PYTHONPATH = '/var/jenkins_home/.local/lib/python3.9/site-packages'
    }
    stages {
	stage('Fetch develop branch') {
            steps {
                git branch: 'develop', url: 'https://github.com/anastaviki/test.git'
            }
        }
        
        stage('Check for pull requests') {
            steps {
                script {
                    sh 'git fetch origin'
                    sh 'git checkout develop'
                    sh 'git pull  --rebase'
                    def branches = sh(returnStdout: true, script: "git branch -r --no-merged origin/develop | grep -v HEAD | awk '{print \$1}'")
                    if (branches.trim().length() == 0) {
                        error 'No pull requests found from feature branches to develop branch'
                    } else {
                        echo "Found pull requests from the following feature branches: ${branches}"
                    }
                }
            }
        }
        

	stage('Inst') {
            steps {
                 sh 'echo $PYTHONPATH'
            }
        }
	stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/anastaviki/test.git'
            }
        }

		stage('Install dependencies') {
            steps {
			
                sh 'pip install -r requirements.txt'
				sh 'pip3 list'
            }
        }
		

		 stage('Run Pytest') {
            steps {
                sh 'python3 -m pytest PyTest_HW/PyTest/test_cases.py --html=report.html '
            }
        }
		
		stage('Run Robot Framework Tests') {
            steps {
			
                sh 'python3 -m robot -d reports/ RobotFramework_HW/RF_Tests/tests/'
            }
        }
    }
}
