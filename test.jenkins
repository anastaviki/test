pipeline {
    agent any
	tools {
        git 'my-git'
    }
	environment {
        PYTHONPATH = '/var/jenkins_home/.local/lib/python3.9/site-packages'
    }
    stages {
	stage('Check Pull Requests') {
            steps {
                script {
                    def prs = git poll: true, branches: [[name: 'refs/pull/*/head']], changelog: false, showRevision: true, quiet: true, remote: 'origin'
                    if (prs.isEmpty()) {
                        currentBuild.result = 'ABORTED'
                        error('No pull requests found')
                    } else {
                        prs.each { pr ->
                            echo "Pull request found: ${pr.getRevision()}"
                        }
                    }
                }
            }
        }


	stage('Inst') {
            steps {
                 sh 'echo $PYTHONPATH'
            }
        }
	stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/anastaviki/test.git'
            }
        }

		stage('Install dependencies') {
            steps {
			
                sh 'pip install -r requirements.txt'
				sh 'pip3 list'
            }
        }
		

		 stage('Run Pytest') {
            steps {
                sh 'python3 -m pytest PyTest_HW/PyTest/test_cases.py --html=report.html '
            }
        }
		
		stage('Run Robot Framework Tests') {
            steps {
			
                sh 'python3 -m robot -d reports/ RobotFramework_HW/RF_Tests/tests/'
            }
        }
    }
}
