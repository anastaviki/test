pipeline {
    agent any
	tools {
        git 'my-git'
    }
	environment {
        PYTHONPATH = '/var/jenkins_home/.local/lib/python3.9/site-packages'
    }
    stages {

	stage('Inst') {
            steps {
                 sh 'echo $PYTHONPATH'
            }
        }
	stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/anastaviki/test.git'
            }
        }

		stage('Install dependencies') {
            steps {
			
                sh 'pip3 install robotframework'
            }
        }
		

		 stage('Run Pytest') {
            steps {
			withEnv(['/var/jenkins_home/.local/lib/python3.9/site-packages']) {
                    sh 'python3 -m pytest PyTest_HW/PyTest/test_cases.py --html=report.html '
                }
                
            }
        }
		
		stage('Run Robot Framework Tests') {
            steps {
			withEnv(['/var/jenkins_home/.local/lib/python3.9/site-packages']) {
                    sh 'robot -d reports/ RobotFramework_HW/RF_Tests/tests/'
                }
                
            }
        }
    }
}
